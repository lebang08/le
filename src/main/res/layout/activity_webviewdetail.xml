<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3f51b5">

        <TextView
            android:id="@+id/txt_webviewdetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="微信微选收藏"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_webviewdetail_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:onClick="close"
            android:src="@drawable/arrow_white_back" />

        <ImageView
            android:id="@+id/img_webview_detail_unlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="8dp"
            android:background="@mipmap/icon_star_cancel" />
    </FrameLayout>

    <TextView
        android:id="@+id/txt_webviewdetail_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:textColor="#3f51b5"
        android:textIsSelectable="true"
        android:textSize="16sp" />

    <WebView
        android:id="@+id/webviewdetail_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
